# Maintainer: Raphael Scholer <rscholer@gmx.de>
pkgname=desktoggle
pkgver=1.5
pkgrel=3
pkgdesc='Hide all windows and show the desktop.'
arch=('i686' 'x86_64')
conflicts=("desktoggle-git")
url='https://github.com/rscholer/desktoggle'
license=('GPL3')
depends=('libx11')
makedepends=('asciidoc')
source=("${url}/archive/v${pkgver}.tar.gz")
sha256sums=('eec5d2d88b4d77b19022fc7d9326ab964472169bb7a288870b2c1cd1a71f890c')

build() {
  cd "${pkgname}-${pkgver}"
  make
}

package() {
  cd "${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" prefix="/usr" install
}
# vim:set ts=2 sw=2 et:
