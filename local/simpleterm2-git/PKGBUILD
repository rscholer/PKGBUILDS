# Maintainer: Raphael Scholer <rascholer@gmail.com>
_pkgname=simpleterm2
pkgname=${_pkgname}-git
pkgver=0.1.1.r14.g0f279e0
pkgrel=2
pkgdesc="Simple GTK3+ terminal emulator"
arch=('any')
url="https://github.com/rscholer/${pkgname%-git}"
license=('GPL3')
makedepends=(python-docutils)
depends=(python-gobject vte3)
conflicts=("${_pkgname}")
source=("git+file:///home/raphael/Documents/Code/Local/${_pkgname}")
sha256sums=('SKIP')

pkgver() {
    cd "${_pkgname}"
	git describe --long --tags | sed 's/^v//;s/\([^-]*-g\)/r\1/;s/-/./g'
}

package() {
    cd "${_pkgname}"
    python setup.py install --prefix="/usr" --root="${pkgdir}" --optimize=2
}

