# Maintainer: Raphael Scholer <rscholer@gmx.de>
pkgname=touchpadtoggle-git
pkgver=1.0_23_g33093f6
pkgrel=1
pkgdesc='Automatically enable/disable touchpad.'
arch=('any')
url='https://github.com/rscholer/touchpadtoggle'
license=('GPL3')
conflicts=("touchpadtoggle")
makedepends=('git')
depends=('python-psutil' 'python-gobject')
source=("git+${url}")
md5sums=('SKIP')

pkgver() {
  cd "touchpadtoggle"
  echo "$(git describe --always |sed 's#-#_#g;s#v##')"
}

package() {
  cd "touchpadtoggle"
  make DESTDIR="${pkgdir}" prefix="/usr" install

  # Remove unneeded files
  rm -r "${pkgdir}/usr/share/"
}
# vim:set ts=2 sw=2 et:
