# Maintainer: Raphael Scholer <rscholer@gmx.de>
pkgname=touchpadtoggle
pkgver=2.0
pkgrel=1
pkgdesc='Automatically enable/disable touchpad.'
arch=('any')
url='https://github.com/rscholer/touchpadtoggle'
license=('GPL3')
conflicts=("touchpadtoggle-git")
depends=('python-psutil' 'python-gobject' 'python-xdg')
source=("https://github.com/rscholer/${pkgname}/archive/v${pkgver}.tar.gz")

package() {
  cd "${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" prefix="/usr" install

  # Remove unneeded files
  rm -r "${pkgdir}/usr/share/doc/"
}
# vim:set ts=2 sw=2 et:
md5sums=('b96077e2d28a5a33072acd7177684c64')
