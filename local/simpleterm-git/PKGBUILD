# Maintainer: Raphael Scholer <rascholer@gmail.com>
_pkgname=simpleterm
pkgname=${_pkgname}-git
pkgver=0.1_16_gaa76c68
pkgrel=1
pkgdesc="Simple GTK3+ terminal emulator"
arch=('any')
url="https://github.com/rscholer/${pkgname%-git}"
license=('GPL3')
makedepends=(python-docutils)
depends=(python-gobject vte3-glade-catalogue)
conflicts=("${_pkgname}")
source=("git+file:///home/raphael/Documents/Code/Local/${_pkgname}")
sha256sums=('SKIP')

pkgver() {
	cd "${_pkgname}"
	echo "$(git describe --always |sed 's#-#_#g;s#v##')"
}

build() {
	cd "${_pkgname}"
	make
}

package() {
	cd "${_pkgname}"
	make DESTDIR="${pkgdir}/" prefix="/usr" install
}

