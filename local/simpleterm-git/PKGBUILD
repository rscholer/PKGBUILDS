# Maintainer: Raphael Scholer <rscholer@gmx.de>
pkgname=simpleterm-git
pkgver=0.1_102_gcacb559
pkgrel=1
pkgdesc="Simple GTK3+ terminal emulator"
arch=('i686' 'x86_64')
url="https://github.com/rscholer/${pkgname%-git}"
license=('GPL3')
makedepends=(asciidoc)
depends=(python-gobject python-xdg vte3)
provides=("${pkgname%-git}")
conflicts=("${pkgname%-git}")
source=('FOLDER::VCS+URL#FRAGMENT')
source=("git+file:///home/raphael/Documents/Code/Local/simpleterm")
md5sums=('SKIP')

pkgver() {
	cd "$srcdir/${pkgname%-git}"
	echo "$(git describe --always |sed 's#-#_#g;s#v##')"
}

build() {
	cd "$srcdir/${pkgname%-git}"
	make
}

package() {
	cd "$srcdir/${pkgname%-git}"
	make DESTDIR="$pkgdir/" prefix="/usr" install
}

