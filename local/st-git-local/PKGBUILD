# Contributor: Gaetan Bisson <bisson@archlinux.org>
# Contributor: Scytrin dai Kinthra <scytrin@gmail.com>

pkgname=st-git-local
_pkgname=st
pkgver=0.7.r1.g023225e
pkgrel=2
pkgdesc='Simple virtual terminal emulator for X'
url='http://git.suckless.org/st/'
arch=('i686' 'x86_64')
license=('MIT')
depends=('libxft')
makedepends=('git')
source=('git://git.suckless.org/st'
        'config.diff'
        'scrollback.diff'
        'scrollback-mouse.diff'
        'scrollback-mouse-altscreen.diff')
sha1sums=('SKIP'
          'eba73533f7da9d676da2820baa9b6b990141a50f'
          'f42d0b0ae25491792acbc6b3ffab025027957a13'
          'cdeaf224e828c3acb6daba25de1b405092666e8e'
          'ab73cc6f01b639e1b78119f9ba2844aa9b2aaac5')

provides=("${_pkgname}" "${pkgname}-git")
conflicts=("${_pkgname}" "${pkgname}-git")

pkgver() {
  cd "${_pkgname}"

  git describe --long --tags | sed 's/\([^-]*-g\)/r\1/;s/-/./g'
}

prepare() {
  cd "${_pkgname}"

  # Use Flags as defined in makepkg.conf
  sed \
    -e 's/CFLAGS =/CFLAGS +=/g' \
    -e 's/CPPFLAGS =/CPPFLAGS +=/g' \
    -e 's/LDFLAGS =/LDFLAGS +=/g' \
    -i config.mk

  # Do not build terminfo descriptions. ncurses distributes them already.
  sed '/@tic/d' -i Makefile

  # Apply patches
  patch -Np1 <"${srcdir}/scrollback.diff"
  patch -Np1 <"${srcdir}/scrollback-mouse.diff"
  patch -Np1 <"${srcdir}/scrollback-mouse-altscreen.diff"

  # Apply changes to configuration file
  make config.h
  patch -Np1 <"${srcdir}/config.diff"
}

build() {
  cd "${_pkgname}"

  make X11INC=/usr/include/X11 X11LIB=/usr/lib/X11
}

package() {
  cd "${_pkgname}"

  make PREFIX=/usr DESTDIR="${pkgdir}" install

  install -m 755 -d "${pkgdir}/usr/share/licenses/${pkgname}"
  install -m 644 -t "${pkgdir}/usr/share/licenses/${pkgname}" LICENSE
}
# vim:set ts=2 sw=2 et:
