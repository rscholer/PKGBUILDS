# Maintainer: Raphael Scholer <rscholer@gmx.de>
pkgname='python-obpm'
pkgver=1.0
pkgrel=1
pkgdesc="Python bindings for creating openbox pipe menus"
arch=('any')
url='http://github.com/rscholer/python-obpm'
license=('MIT')
depends=('python')
makedepends=('python-setuptools')
source=("git+${url}")
md5sums=('SKIP')

pkgver() {
  cd "${pkgname}"
  echo "$(git describe --always |sed 's#-#_#g;s#v##')"
}

package() {
  cd "${pkgname}"
  python setup.py install --prefix="/usr" --root="${pkgdir}" --optimize=1
}
# vim:set ts=2 sw=2 et:
