pkgname=mathematica

post_install() {
	update-desktop-database -q
	gtk-update-icon-cache -f -q -t /usr/share/icons/hicolor
	update-mime-database usr/share/mime &>/dev/null
	xdg-desktop-menu --install /usr/share/desktop-directories/wolfram-all.directory \
		/usr/share/applications/wolfram-mathematica8.desktop
}

post_upgrade() {
	post_install $1
}

pre_remove() {
	xdg-desktop-menu --uninstall /usr/share/desktop-directories/wolfram-all.directory \
		/usr/share/applications/wolfram-mathematica8.desktop
}

post_remove() {
	gtk-update-icon-cache -f -q -t /usr/share/icons/hicolor
}
